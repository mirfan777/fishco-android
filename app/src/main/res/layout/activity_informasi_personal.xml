<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.settings.InformasiPersonalActivity"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- ScrollView untuk seluruh konten -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_muda"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipChildren="false"
            android:clipToPadding="false">

            <!-- Header dengan tombol back -->
            <ImageView
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:contentDescription="Back"
                android:layout_marginTop="15dp"
                android:padding="16dp"
                android:layout_gravity="start" />

            <!-- Wrapper gambar profil dan background -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:clipChildren="false">

                <!-- Background untuk akun -->
                <RelativeLayout
                    android:id="@+id/bg_akun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_akun"
                    android:paddingTop="48dp"
                    android:paddingBottom="16dp">


                </RelativeLayout>

                <!-- FIELD ADA DISINI -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#F9F9F9"
                    android:layout_marginTop="70dp">

                    <!-- Nama -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_edittext_background"
                            android:hint="Cuko Pempek Enjoyer"
                            android:padding="12dp"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_edittext_background"
                            android:hint="cukopempekenjoyer@gmail.com"
                            android:padding="12dp"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- No. HP -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <Spinner
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_spinner_background"
                            android:padding="12dp"
                            android:entries="@array/flag_phone" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_edittext_background"
                            android:hint="8123456789"
                            android:padding="12dp"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Nama -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Password"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_edittext_background"
                            android:hint=" "
                            android:padding="12dp"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Nama -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Konfirmasi Password"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_edittext_background"
                            android:hint=" "
                            android:padding="12dp"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Tombol Simpan -->
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/primary"
                        android:text="Simpan"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginTop="16dp"
                        android:padding="12dp"
                        android:background="@drawable/rounded_button_background" />
                </LinearLayout>



                <!-- Gambar Profil di atas bg_akun -->
                <ImageView
                    android:id="@+id/aquarium_profile"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/circle_background"
                    android:scaleType="centerCrop"
                    android:src="@drawable/freshwater"
                    android:clipToOutline="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-32dp" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>