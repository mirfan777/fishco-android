<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.aquarium.AquariumTidakMemilikiActivity">

    <!-- My Aquarium Layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg">

        <!-- Header Section -->
        <RelativeLayout
            android:id="@+id/header_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Background Image for Header -->
            <ImageView
                android:id="@+id/bg_header"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/bg_header" />

            <!-- Text and Profile on Top of Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/welcome_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 Akuarium"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/greeting_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Aquarium"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Button Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp"
                android:padding="8dp"
                android:background="@drawable/overlay_background_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- "Semua Akuarium" Button with Active Style -->
                    <TextView
                        android:id="@+id/btn_all_aquariums"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:text="Semua Akuarium"
                        android:textColor="@color/black"
                        android:background="@drawable/overlay_background_blue" />

                    <!-- Separator -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingHorizontal="8dp"
                        android:text="|"
                        android:textColor="@color/gray" />

                    <!-- "Pengingat" Button (Inactive) -->
                    <TextView
                        android:id="@+id/btn_reminder"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:text="Pengingat"
                        android:textColor="@color/black" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <!-- Empty Aquarium Message Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="300dp">

            <!-- Icon Image -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_empty_aquarium"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Empty Aquarium Icon" />

            <!-- Message Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kamu Tidak Memiliki Akuarium"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:textStyle="bold" />

            <!-- Sub-message Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tambahkan tanaman pertama Anda dan lakukan rutinitas perawatan tanaman harian Anda"
                android:textSize="14sp"
                android:textColor="@color/gray_dark"
                android:gravity="center"
                android:layout_marginTop="8dp" />

            <!-- "Add Aquarium" Button -->
            <Button
                android:id="@+id/btn_add_aquarium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Aquarium"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/blue_muda"
                android:textColor="@color/blue_primary" />
        </LinearLayout>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>