<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/main"
    tools:context=".activity.scanner.NoFishDetectedActivity">

    <!-- Tombol Back -->
    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Container untuk Icon, TextView, dan Tombol -->
    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintBottom_toTopOf="@id/btn_foto_ulang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Icon di tengah -->
        <ImageView
            android:id="@+id/ic_empty_aquarium"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_empty_aquarium"
            android:contentDescription="Empty Aquarium" />

        <!-- TextView untuk deskripsi -->
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="No Fish Detected"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- TextView untuk sub-deskripsi -->
        <TextView
            android:id="@+id/tv_sub_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Kamu bisa memeriksa tips di bawah ini dan mencoba\nuntuk mendapatkan gambar ikan yang jelas."
            android:textColor="#777777"
            android:textSize="14sp"
            android:textAlignment="center"
            android:gravity="center" />

        <!-- Tombol Go to Search -->
        <Button
            android:id="@+id/btn_go_to_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E3F2FD"
            android:text="Go to Search"
            android:textColor="#007AFF"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Tombol Foto Ulang -->
    <Button
        android:id="@+id/btn_foto_ulang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="#007AFF"
        android:text="Foto Ulang"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
