<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.aquarium.AquariumDetailActivity">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section -->
            <RelativeLayout
                android:id="@+id/header_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Background Image for Header -->
                <ImageView
                    android:id="@+id/bg_header"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_header" />

                <!-- Top Bar with Back Button and Three-Dot Menu -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="15dp">

                    <ImageButton
                        android:id="@+id/back_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/back"
                        android:contentDescription="Back" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/menu_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/more_vert"
                        android:contentDescription="Menu" />
                </LinearLayout>

                <!-- Profile and Aquarium Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="55dp">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/profile"
                        android:background="@drawable/circle_background"
                        android:contentDescription="Aquarium Profile Image" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/aquarium_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aquariumku"
                            android:textStyle="bold"
                            android:textSize="30sp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/fish_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4 ikan yang dimiliki"
                            android:textSize="18sp"
                            android:textColor="@color/gray" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Button Header (Aquarium Options) -->
            </RelativeLayout>

            <!-- Fish List (Horizontal Scroll) -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:padding="16dp"
                android:layout_height="wrap_content"
                android:paddingVertical="16dp"
                android:paddingHorizontal="8dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Repeatable Fish Item -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/rounded_background"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="150dp"
                            android:layout_height="120dp"
                            android:clipToPadding="true">

                            <!-- Image with fitXY scaling -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/freshwater" />

                            <!-- Text overlay at top -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:background="@drawable/overlay_background"
                                android:gravity="center"
                                android:padding="4dp"
                                android:text="Ikan 1"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/rounded_background"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="150dp"
                            android:layout_height="120dp"
                            android:clipToPadding="true">

                            <!-- Image with fitXY scaling -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/marine" />

                            <!-- Text overlay at top -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:background="@drawable/overlay_background"
                                android:gravity="center"
                                android:padding="4dp"
                                android:text="Ikan 2"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/rounded_background"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="150dp"
                            android:layout_height="120dp"
                            android:clipToPadding="true">

                            <!-- Image with fitXY scaling -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/coldwater" />

                            <!-- Text overlay at top -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:background="@drawable/overlay_background"
                                android:gravity="center"
                                android:padding="4dp"
                                android:text="Ikan 3"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </FrameLayout>
                    </LinearLayout>

                    <!-- Ulangi Layout di atas untuk setiap item ikan yang ingin ditambahkan -->

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Quick Tips Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Tips"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <!-- Example Tip -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/suhu"
                        android:contentDescription="Temperature Icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Suhu Aquarium yang cocok untuk ikan yang kamu miliki adalah 27°C - 30°C."
                        android:textColor="@color/gray_dark"
                        android:textSize="15sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/maintenance"
                        android:contentDescription="Maintenance Icon"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Demi kenyamanan Ikan yang ada di dalam aquarium milikmu, maintenance aquarium seperti penggantian air, pembersihan Aquarium diperlukan sekurang kurangnya 1 kali dalam 1 bulan."
                        android:textColor="@color/gray_dark"
                        android:textSize="15sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/makan"
                        android:contentDescription="Makan Icon"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Pemberian pakan untuk ikan dilakukan 2 kali sehari dengan jeda 10 hingga 12 jam setalah pemberian awal."
                        android:textColor="@color/gray_dark"
                        android:textSize="15sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Add More Tips Here -->
            </LinearLayout>

            <!-- Notifications Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:clipToPadding="false">

                <!-- Rounded Notification Background -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:elevation="4dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/rounded_notification_background">

                    <!-- Notification Title -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pemberian Makan"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginStart="8dp"/>

                    <!-- Time Remaining Text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 jam lagi..."
                        android:textSize="14sp"
                        android:textColor="@color/gray_dark" />

                    <!-- Notification Icon -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/notification"
                        android:contentDescription="Notification Icon"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"/>
                </LinearLayout>

                <!-- Rounded Notification Background -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:elevation="4dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/rounded_notification_background">

                    <!-- Notification Title -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Maintenance Aquarium"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginStart="8dp"/>

                    <!-- Time Remaining Text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 hari lagi..."
                        android:textSize="14sp"
                        android:textColor="@color/gray_dark" />

                    <!-- Notification Icon -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/notification"
                        android:contentDescription="Notification Icon"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>