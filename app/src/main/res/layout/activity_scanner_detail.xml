<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.scanner.DetailScannerActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Header -->
            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="400dp">

                <ImageView
                    android:id="@+id/fish_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:background="@drawable/rounded_background" />

                <ImageButton
                    android:id="@+id/close_button"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_margin="16dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/close"
                    android:background="?attr/selectableItemBackgroundBorderless" />
            </RelativeLayout>

            <!-- Nama Ikan -->
            <LinearLayout
                android:id="@+id/fish_name_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_below="@id/header">

                <TextView
                    android:id="@+id/fish_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/fish_species"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#777777" />
            </LinearLayout>

            <!-- Overview -->
            <LinearLayout
                android:id="@+id/fish_overview_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_below="@id/fish_name_container">

                <TextView
                    android:id="@+id/penyakit_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Penyakit"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/penyakit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/overview_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Ikan Overview"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/overview_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:textColor="#555555" />

                <Button
                    android:id="@+id/show_more_button_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Baca Selengkapnya"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#E3F2FD"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Saran Obat dan Perawatan -->
            <LinearLayout
                android:id="@+id/saran_obat_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_below="@id/fish_overview_container">

                <!-- Saran Obat -->
                <TextView
                    android:id="@+id/saran_obat_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saran Obat"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <LinearLayout
                    android:id="@+id/medicine_categories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:weightSum="2">

                    <!-- Obat 1 -->
                    <LinearLayout
                        android:id="@+id/obat1_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_margin="4dp"
                        android:background="@drawable/rounded_background">

                        <!-- Image and Overlay Container -->
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:clipToPadding="true">

                            <!-- Image with fitXY scaling -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/obat" />

                            <!-- Text overlay -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:background="@drawable/overlay_background"
                                android:gravity="center"
                                android:padding="8dp"
                                android:text="Obat 1"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </FrameLayout>
                    </LinearLayout>

                    <!-- Obat 2 -->
                    <LinearLayout
                        android:id="@+id/obat2_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_margin="4dp"
                        android:background="@drawable/rounded_background">

                        <!-- Image and Overlay Container -->
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:clipToPadding="true">

                            <!-- Image with fitXY scaling -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/obat" />

                            <!-- Text overlay -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:background="@drawable/overlay_background"
                                android:gravity="center"
                                android:padding="8dp"
                                android:text="Obat 2"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Saran Perawatan -->
                <TextView
                    android:id="@+id/saran_perawatan_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Saran Perawatan"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/saran_perawatan_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:textColor="#555555" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
