<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.article.ArticleDetailActivity">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <!-- Author Name and Date -->
    <TextView
        android:id="@+id/author_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Farhan Hernandez  •  04 September 2024"
        android:textColor="@color/gray"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_button"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>

    <!-- Article Title -->
    <TextView
        android:id="@+id/article_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Breeding Technique: Studi kasus mengenai breeding technique baru yang manjur"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/author_date"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"/>

    <!-- Thumbnail Image -->
    <ImageView
        android:id="@+id/thumbnail_image"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_large_image"
        android:background="@drawable/rounded_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/article_title"
        android:layout_marginTop="12dp"/>

    <!-- Article Content -->
    <TextView
        android:id="@+id/article_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sit habitasse semper euismod libero molestie rutrum enim. Arcu mollis volutpat blandit inceptos turpis enim montes posuere..."
        android:textColor="@color/black"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/thumbnail_image"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"/>

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@id/article_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Leave Comment Text -->
    <TextView
        android:id="@+id/leave_comment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leave your comment here"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"/>

    <!-- Comment Section -->
    <LinearLayout
        android:id="@+id/comment_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/leave_comment_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp">

        <!-- Single Comment -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/sample_profile_picture"
                android:scaleType="centerCrop"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_image"/>

            <!-- Comment Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <!-- Username and Time -->
                <TextView
                    android:id="@+id/username_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="user1237623  •  10h"
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>

                <!-- Comment Text -->
                <TextView
                    android:id="@+id/comment_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Artikelnya scam nih gada sourcenya, tolong di take down admin! D:<"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <!-- Reply and View Replies -->
                <TextView
                    android:id="@+id/reply_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reply"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>

                <!-- View More Replies -->
                <TextView
                    android:id="@+id/view_replies_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View 12 more replies"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- Add Comment Input -->
    <LinearLayout
        android:id="@+id/add_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Profile Image Placeholder -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_profile_placeholder"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_image"/>

        <!-- Comment Input Field -->
        <EditText
            android:id="@+id/comment_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Add your own comment"
            android:textSize="16sp"
            android:paddingStart="8dp"
            android:background="@android:color/transparent"
            android:inputType="textMultiLine"/>

        <!-- Send Button -->
        <ImageButton
            android:id="@+id/send_comment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_send"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Send Comment"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
