
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".activity.encyclopedia.FishListActivity">

    <!-- Container Header dan Isi -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Header Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Background Image untuk Header -->
            <ImageView
                android:id="@+id/bg_header_kecil"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/bg_header_kecil" />

            <!-- Tombol Back -->
            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/back"
                android:contentDescription="Back" />

            <!-- Category Name di Atas Search Bar -->
            <TextView
                android:id="@+id/category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@id/back_button"
                android:text="Freshwater Fish"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp" />

            <!-- Search Bar di Dalam Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="70dp"
                android:layout_centerHorizontal="true">

                <!-- Background untuk Search Bar -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/search"
                    android:scaleType="fitXY" />

                <!-- Placeholder Teks untuk Search -->
                <EditText
                    android:id="@+id/search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Search for fish"
                    android:background="@android:color/transparent"
                    android:paddingStart="40dp"
                    android:paddingEnd="16dp"
                    android:drawablePadding="14dp" />
            </RelativeLayout>
        </RelativeLayout>

        <!-- Div Isi -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Item Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_notification_background"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp">

                    <!-- Fish Image -->
                    <ImageView
                        android:id="@+id/fish_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/freshwater"
                        android:background="@drawable/circle_background"
                        android:contentDescription="Fish Image"
                        android:clipToOutline="true"/>

                    <!-- Fish Info -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Fish Name -->
                        <TextView
                            android:id="@+id/fish_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cupang"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/black" />

                        <!-- Fish Species -->
                        <TextView
                            android:id="@+id/fish_species"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Betta sp."
                            android:textSize="14sp"
                            android:textColor="@color/gray" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Item Container 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_notification_background"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp">

                    <!-- Fish Image -->
                    <ImageView
                        android:id="@+id/fish_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/freshwater"
                        android:background="@drawable/circle_background"
                        android:contentDescription="Fish Image"
                        android:clipToOutline="true"/>

                    <!-- Fish Info -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Fish Name -->
                        <TextView
                            android:id="@+id/fish_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Freshwater Fish"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/black" />

                        <!-- Fish Description -->
                        <TextView
                            android:id="@+id/fish_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Freshwater Fish"
                            android:textSize="14sp"
                            android:textColor="@color/gray" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
