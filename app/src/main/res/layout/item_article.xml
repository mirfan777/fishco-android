<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp"
    tools:context=".activity.article.ArticleListActivity">

    <!-- Layout untuk Artikel -->
    <LinearLayout
        android:id="@+id/small_article_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Artikel Utama dengan Gambar Besar -->
        <LinearLayout
            android:id="@+id/large_article_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/large_article_background">

        <!-- Gambar Besar Artikel -->
            <ImageView
                android:id="@+id/large_article_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:background="@drawable/rounded_image_background" />

            <!-- Judul Artikel Besar -->
            <TextView
                android:id="@+id/large_article_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teknik Breeding Ikan Koi Terbaru"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <!-- Info Artikel Besar -->
            <TextView
                android:id="@+id/large_article_created_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By Adrian Nawawi • 14 Nov 2024"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <!-- Artikel dengan Gambar Kecil -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Gambar Kecil Artikel -->
            <ImageView
                android:id="@+id/small_article_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:clipToOutline="true" />

            <!-- Detail Artikel Kecil -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingStart="8dp">

                <!-- Judul Artikel -->
                <TextView
                    android:id="@+id/small_article_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jenis-Jenis Ikan Hias Terbaik"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Info Artikel -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/small_article_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="By Farhan Hernandez •"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/created_at"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13 Nov 2024"
                        android:textColor="@color/gray"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginVertical="8dp" />
    </LinearLayout>
</RelativeLayout>
