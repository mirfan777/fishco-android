<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.article.ArticleListActivity">

<ImageView
        android:id="@+id/small_article_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/small_article_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Judul Artikel"
        android:textStyle="bold"
        android:textSize="16sp"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintStart_toEndOf="@id/small_article_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/small_article_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="12sp"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="@id/small_article_title"
        app:layout_constraintTop_toBottomOf="@id/small_article_title" />

    <TextView
        android:id="@+id/small_article_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="04 September 2024"
        android:textColor="@color/gray"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/small_article_username"
        app:layout_constraintTop_toTopOf="@id/small_article_username"
        app:layout_constraintBottom_toBottomOf="@id/small_article_username" />
</androidx.constraintlayout.widget.ConstraintLayout>
