<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.article.ArticleListActivity">

    <!-- Div Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"> <!-- Added vertical constraint -->

        <!-- Header Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Background Image untuk Header -->
            <ImageView
                android:id="@+id/bg_header_kecil"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/gradient3" />

            <!-- Search Bar di Dalam Header -->
            <RelativeLayout
                android:id="@+id/search_bar_container"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true">

                <!-- Background untuk Search Bar -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/search"
                    android:scaleType="fitXY" />

                <!-- Placeholder Teks untuk Search -->
                <EditText
                    android:id="@+id/search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Search"
                    android:textColorHint="@color/gray"
                    android:background="@android:color/transparent"
                    android:paddingStart="40dp"
                    android:paddingEnd="16dp"
                    android:drawablePadding="14dp" />
            </RelativeLayout>

            <!-- Filter Buttons Section di Bawah Search Bar -->
            <LinearLayout
                android:id="@+id/filter_buttons_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/search_bar_container"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="8dp"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/filter_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_filter"
                    android:background="@drawable/bg_container"
                    android:elevation="4dp"/>

                <Button
                    android:id="@+id/filter_terbaru"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/filter_button"
                    android:text="Terbaru"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:elevation="4dp"/>

                <Button
                    android:id="@+id/filter_populer"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/filter_button"
                    android:text="Populer"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:elevation="4dp"/>
            </LinearLayout>
        </RelativeLayout>

        <!-- Scrollable Content List -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- First Article Item with Large Image and Title Below -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Large Article Image -->
                    <ImageView
                        android:id="@+id/large_article_image"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_artikel"
                        android:background="@drawable/rounded_background_article"
                        android:clipToOutline="true"
                        android:layout_marginBottom="3dp" />

                    <!-- Article Title Below Image -->
                    <TextView
                        android:id="@+id/large_article_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Breeding Technique: Studi kasus mengenai breeding technique baru yang manjur"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <!-- Article Author and Date -->
                    <!-- Username and Time -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Username -->
                        <TextView
                            android:id="@+id/large_article_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Farhan Hernandez"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />

                        <!-- Separator -->
                        <TextView
                            android:id="@+id/separator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" â€¢ "
                            android:textColor="@color/gray"
                            android:textSize="14sp"/>

                        <!-- Time -->
                        <TextView
                            android:id="@+id/large_article_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="04 September 2024"
                            android:textColor="@color/gray"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:layout_marginVertical="8dp" />

                <!-- Smaller Article Items -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <!-- Small Article Image -->
                    <ImageView
                        android:id="@+id/small_article_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_artikel"
                        android:background="@drawable/rounded_background_article"
                        android:clipToOutline="true"
                        android:layout_marginBottom="3dp" />

                    <!-- Article Title to the Right of Image -->
                    <TextView
                        android:id="@+id/small_article_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/small_article_image"
                        android:layout_marginStart="8dp"
                        android:text="Jenis-Jenis Ikan Hias Air Tawar Terbaik untuk Akuarium di Rumah Anda."
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <!-- Article Author and Date -->
                    <!-- Article Author, Date, and Views Container -->
                    <LinearLayout
                        android:id="@+id/article_info_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/small_article_image"
                        android:layout_below="@id/small_article_title"
                        android:orientation="horizontal"
                        android:layout_marginStart="8dp">

                        <!-- Username / Author -->
                        <TextView
                            android:id="@+id/small_article_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Adrian Nawawi"
                            android:textColor="@color/gray"
                            android:textSize="10sp" />

                        <!-- Separator -->
                        <TextView
                            android:id="@+id/separator1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" â€¢ "
                            android:textColor="@color/gray"
                            android:textSize="10sp"/>

                        <!-- Date -->
                        <TextView
                            android:id="@+id/small_article_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="28 September 2024"
                            android:textColor="@color/gray"
                            android:textSize="10sp"/>

                        <!-- Separator -->
                        <TextView
                            android:id="@+id/separator2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" â€¢ "
                            android:textColor="@color/gray"
                            android:textSize="14sp"/>

                        <!-- Views -->
                        <TextView
                            android:id="@+id/views"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="150 Views"
                            android:textColor="@color/gray"
                            android:textSize="10sp"/>
                    </LinearLayout>

                </RelativeLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:layout_marginVertical="8dp" />

                <!-- Tambahkan lebih banyak artikel kecil dengan format RelativeLayout yang sama jika diperlukan -->

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>